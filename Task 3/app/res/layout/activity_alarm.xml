<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgback"
    android:padding="16dp">


    <TextView
        android:id="@+id/alarm_state"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="16dp"
        android:text="Alarm State"
        android:textStyle="bold"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_state"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="374dp" />

    <Button
        android:id="@+id/alarm_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gifImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="-259dp"
        android:backgroundTint="@color/pink"
        android:text="Snooze"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/alarm_dismiss"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gifImageView"
        android:layout_marginStart="66dp"
        android:layout_marginTop="-259dp"
        android:layout_toEndOf="@+id/alarm_off"
        android:backgroundTint="@color/pink"
        android:text="Stop"
        android:textColor="@color/white"
        android:textSize="18dp" />

</RelativeLayout>

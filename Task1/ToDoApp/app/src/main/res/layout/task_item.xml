<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:backgroundTint="@color/blueSplash"

        android:orientation="horizontal">

        <!-- Left section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:padding="4dp"
            android:orientation="vertical">

            <!-- Content for the left section goes here -->
            <TextView
                android:id="@+id/monthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Status"
                android:textSize="15sp"
                android:textColor="@color/muted_black"
                android:textStyle="bold"
                android:layout_gravity="center"/>


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/statusSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />


            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:textColor="@color/blueSplash"
                android:textSize="0sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/yearTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="0sp"
                android:textColor="@color/muted_black"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>


        <!-- Right section -->
        <View
            android:id="@+id/divider12"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:background="#556fe3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp"
            android:padding="4dp">

            <!-- Content for the right section goes here -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- Title -->
                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="20sp"
                    android:textColor="@color/muted_black"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true" />

                <!-- Icon -->
                <ImageView
                    android:id="@+id/deleteImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/task_delete"
                    app:tint="#ff0000"
                    android:layout_alignParentEnd="true" />




            </RelativeLayout>

            <TextView
                android:id="@+id/contentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="Content here"
                android:textSize="12sp"
                android:textColor="@color/gray_faded"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dateInitTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:text="17/02/2023"
                    android:textColor="@color/gray_faded"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/editImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/edit"
                    app:tint="@color/blueSplash" />

            </RelativeLayout>
            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="00:00"
                android:textSize="12sp"
                android:textColor="@color/gray_faded" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
